{
	"tasks": {
		"prod": "deno run -A src/main.ts",
		"dev": "deno run -A --watch src/main.ts",
		"debug": "deno run --inspect -A src/main.ts"
	},
	"lint": {
		"rules": {
			"no-explicit-any": false
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"axios": "npm:axios@^1.7.7",
		"dotenv": "npm:dotenv@^16.4.5"
	}
}
